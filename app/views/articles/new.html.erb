<h1>Ajouter un Article</h1>

<%= form_for @article do |f| %>
	<% if @article.errors.any? %>
		<div class="error_messages">
			<h2>Formulaire invalide</h2>
			<ul>
				<% for message in @article.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<p>
		<%= f.label :title, 'Titre' %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :content, 'Contenu' %><br />
		<%= f.text_area :content %>
	</p>
	
	<p class="button"><%= f.submit 'CrÃ©er l\'article' %></p>
<% end %>
